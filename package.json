{
  "name": "trivia-for-maracas-monorepo",
  "private": true,
  "workspaces": [
    "client",
    "backoffice",
    "server",
    "shared"
  ],
  "scripts": {
    "cleanup": "./cleanup_processes.sh",
    "predev:client": "npm run cleanup",
    "predev:backoffice": "npm run cleanup",
    "predev:server": "npm run cleanup",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:backoffice\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:backoffice": "npm run dev --workspace=backoffice",
    "dev:server": "npm run dev --workspace=server",
    "pretest": "npm run cleanup",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}